VPATH=%VPATH%

CC ?= gcc
CXX ?= g++
CFLAGS += -fPIC -I$(VPATH)/../libpng
AR ?= ar
RUSTC ?= rustc
RUSTFLAGS := $(filter-out -O,$(RUSTFLAGS)) -L ../libpng --opt-level=3
EXT_DEPS ?=
RUSTDOC ?= rustdoc
RUSTDOC_FLAGS ?=
RUSTDOC_TARGET ?= doc

.PHONY: all
all:	libpng-servo.dummy

%.o: %.c
	$(CC) $< -o $@ -c $(CFLAGS)

libpng-servo.dummy: lib.rs libshim.a $(EXT_DEPS)
	$(RUSTC) $(RUSTFLAGS) $< --out-dir . -C extra-filename=-servo
	touch $@

png-test: lib.rs libshim.a
	$(RUSTC) $(RUSTFLAGS) $< -o $@ --test

libshim.a: shim.o
	$(AR) rcs libshim.a shim.o

.PHONY: doc
doc: $(RUSTDOC_TARGET)/png/index.html

$(RUSTDOC_TARGET)/png/index.html: lib.rs $(RUST_SRC) $(EXT_DEPS)
	$(RUSTDOC) $(RUSTDOC_FLAGS) $< -o $(RUSTDOC_TARGET)

check: png-test
	./png-test

.PHONY: clean
clean:
	rm -f *.o *.a *.so *.dylib *.rlib *.dll *.dummy *-test
